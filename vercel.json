{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],

  "rewrites": [
    {
      "source": "/blog/:path*",
      "destination": "https://proxy.inblog.dev/pnutbtr/:path*"
    },
    {
      "source": "/blog",
      "destination": "https://proxy.inblog.dev/pnutbtr"
    },
    {
      "source": "/robots.txt",
      "destination": "https://proxy.inblog.dev/pnutbtr/robots.txt"
    },
    {
      "source": "/api/campaigns",
      "destination": "/api/campaigns.js"
    },
    {
      "source": "/api/influencers",
      "destination": "/api/influencers.js"
    },
    {
      "source": "/api/mentions",
      "destination": "/api/mentions.js"
    },
    {
      "source": "/api/dashboard",
      "destination": "/api/dashboard.js"
    },
    {
      "source": "/api/seeding",
      "destination": "/api/seeding.js"
    },
    {
      "source": "/api/debug-schema",
      "destination": "/api/debug-schema.js"
    },
    {
      "source": "/api/analyze",
      "destination": "/api/analyze.js"
    },
    {
      "source": "/api/influencers-list",
      "destination": "/api/influencers-list.js"
    },
    {
      "source": "/api/sync-instagram-data",
      "destination": "/api/sync-instagram-data.js"
    },
    {
      "source": "/assets/:path*",
      "destination": "/dist/assets/:path*"
    },
    {
      "source": "/:path*\\.(js|css|ico|png|jpg|jpeg|svg|woff|woff2)",
      "destination": "/dist/:path*.$1"
    },
    {
      "source": "/:path*",
      "destination": "/dist/index.html"
    }
  ]
}
